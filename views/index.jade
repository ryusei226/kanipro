doctype
html(lang="en")
    head
        title koa
        link(rel="styleseet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
        style.
            body {
                text-align: center;
            }

            h1 {
                padding-top: 150px;
                font-weight: 200;
                color: #333;
                font-size: 6em;
            }

            html {
                /* 1 */
                font: normal 14px / 20px "Avenir Next", Helvetica, Avenir Next, sans-serif;
                /* 2 */
                -webkit-text-size-adjust: 100%;
                -ms-text-size-adjust: 100%;
                /* 3 */
                background: #ffffff;
                color: #444444;
            }

            .button {
                /* 1 */
                -webkit-appearance: none;
                /* 2 */
                margin: 4px;
                /* 3 */
                border: none;
                /* 4 */
                overflow: visible;
                /* 5 */
                font: inherit;
                color: #444444;
                /* 6 */
                text-transform: none;
                /* 7 */
                display: inline-block;
                -moz-box-sizing: border-box;
                box-sizing: border-box;
                padding: 0 12px;
                background: #eeeeee;
                vertical-align: middle;
                /* 8 */
                line-height: 30px;
                /* 9 */
                min-height: 30px;
                /* 10 */
                font-size: 1rem;
                /* 11 */
                text-decoration: none;
                text-align: center;
            }

            .button:not(:disabled) {
                cursor: pointer;
            }

            /*
             * Hover
             * 1. Apply hover style also to focus state
             * 2. Remove default focus style
             * 3. Required for `a` elements
             */
            .button:hover,
            .button:focus {
                background-color: #f5f5f5;
                color: #444444;
                /* 2 */
                outline: none;
                /* 3 */
                text-decoration: none;
            }

            /* Active */
            .button:active {
                background-color: #dddddd;
                color: #444444;
            }

            .button-large {
                min-height: 80px;
                padding: 0 15px;
                line-height: 40px;
                font-size: 3em;
            }


body
    h1 koa render #{name}
    input.button.button-large(type="button", value='right')
    input.button.button-large(type="button", value='left')
    input.button.button-large(type="button", value='forward')
    input.button.button-large(type="button", value='backward')
